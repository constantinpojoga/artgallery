
<section  class="login-page">
  <div class="container new-artist">
    <div class="row">
      <div class="col-md-push-2 col-md-8 col-sm-push-1 col-sm-10">
        <h1 class="text-center">Add a new artist</h1><br />
        <form class="form-horizontal" method="post" action="/artists/new" enctype="multipart/form-data">

          <div class="form-group">
            <label class="control-label col-sm-2" for="addArtistFullname">Artist name:</label>
            <div class="col-sm-10">
              <input class="form-control" id="addArtistFullname" type="text" name="fullname" placeholder="Artist fullname here" required />
            </div>
          </div>

          <div class="form-group">
            <label class="control-label col-sm-2" for="addArtistAbout">Description:</label>
            <div class="col-sm-10">
              <textarea class="form-control" id="addArtistAbout" name="about" rows="10" required>About the artist</textarea>
            </div>
          </div>

          <div class="form-group">
            <label class="control-label col-sm-2" for="addArtistFoto">Foto:</label>
            <div class="col-sm-10">
              <input class="form-control" id="addArtistFoto" type="file" name="foto" placeholder="Foto path" required image/*/>
            </div>
          </div>
          <div class="form-group">
             <div class="col-sm-push-2 col-sm-10">
                <button class="btn btn-default">Add artist</button>
             </div>
          </div>
        </form>
      </div>
  </div>
</section>  







